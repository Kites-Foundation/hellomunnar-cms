{
  "kind": "collectionType",
  "collectionName": "destinations",
  "info": {
    "name": "destination",
    "description": "List of all the destinations"
  },
  "options": {
    "increments": true,
    "timestamps": false,
    "populateCreatorFields": false,
    "draftAndPublish": true
  },
  "attributes": {
    "reviews": {
      "via": "destination",
      "collection": "review"
    },
    "route": {
      "type": "component",
      "repeatable": false,
      "component": "common.route"
    },
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "text"
    },
    "image": {
      "collection": "file",
      "via": "related",
      "allowedTypes": [
        "images",
        "files",
        "videos"
      ],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {}
    },
    "nearMes": {
      "via": "nearestDestinations",
      "collection": "near-me",
      "dominant": true
    },
    "openingTime": {
      "type": "time"
    },
    "closingTime": {
      "type": "time"
    },
    "availableDays": {
      "type": "string"
    },
    "slug": {
      "type": "uid",
      "targetField": "name"
    },
    "location": {
      "type": "component",
      "repeatable": false,
      "component": "collection-type-components.location"
    },
    "floraAndFaunas": {
      "collection": "flora-and-fauna"
    },
    "challenges": {
      "collection": "challenge"
    }
  }
}
