{
  "kind": "collectionType",
  "collectionName": "destinations",
  "info": {
    "name": "destination",
    "description": "List of all the destinations"
  },
  "options": {
    "increments": true,
    "timestamps": false,
    "populateCreatorFields": false,
    "draftAndPublish": true,
    "privateAttributes": [
      "created_by",
      "created_at",
      "published_at",
      "updated_at"
    ]
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "reviews": {
      "collection": "review",
      "via": "destination"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "map_url": {
      "type": "string",
      "required": true
    },
    "review_average": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "meta_title": {
      "type": "string",
      "maxLength": 60,
      "unique": false
    },
    "meta_description": {
      "type": "string",
      "maxLength": 160
    },
    "og_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "route": {
      "type": "enumeration",
      "enum": [
        "Violet",
        "Indigo",
        "Blue",
        "Green",
        "Yellow",
        "Orrange",
        "Red",
        "NoRoute"
      ]
    },
    "days_available": {
      "type": "string"
    },
    "time_available": {
      "type": "string"
    },
    "reviews_count": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "features": {
      "collection": "feature"
    },
    "thumbnail_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "main_image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "floara_and_fauna": {
      "type": "component",
      "repeatable": true,
      "component": "collection-type-components.floara-and-fauna"
    }
  }
}
