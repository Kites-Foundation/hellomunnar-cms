{
  "kind": "collectionType",
  "collectionName": "destinations",
  "info": {
    "name": "destination",
    "description": "List of all the destinations"
  },
  "options": {
    "increments": true,
    "timestamps": false,
    "populateCreatorFields": false,
    "draftAndPublish": true
  },
  "attributes": {
    "title": {
      "type": "string",
      "required": true
    },
    "reviews": {
      "via": "destination",
      "collection": "review"
    },
    "description": {
      "type": "text",
      "required": true
    },
    "mapUrl": {
      "type": "string",
      "required": true
    },
    "reviewAverage": {
      "type": "decimal",
      "default": 0,
      "required": true
    },
    "metaTitle": {
      "type": "string",
      "maxLength": 60,
      "unique": false
    },
    "metaDescription": {
      "type": "string",
      "maxLength": 160
    },
    "ogImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "slug": {
      "type": "uid",
      "targetField": "title"
    },
    "route": {
      "type": "enumeration",
      "enum": [
        "Violet",
        "Indigo",
        "Blue",
        "Green",
        "Yellow",
        "Orrange",
        "Red",
        "NoRoute"
      ]
    },
    "daysAvailable": {
      "type": "string"
    },
    "timeAvailable": {
      "type": "string"
    },
    "reviewsCount": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "features": {
      "collection": "feature"
    },
    "thumbnailImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "mainImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": false
    },
    "floaraAndFauna": {
      "type": "component",
      "repeatable": true,
      "component": "collection-type-components.floara-and-fauna"
    }
  }
}
