{
  "kind": "collectionType",
  "collectionName": "activities",
  "info": {
    "name": "activity",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "image": {
      "model": "file",
      "via": "related",
      "allowedTypes": [
        "images"
      ],
      "plugin": "upload",
      "required": true
    },
    "reviews": {
      "collection": "review",
      "via": "activity"
    },
    "badgeText": {
      "type": "string",
      "required": true
    },
    "daysAvailable": {
      "type": "string",
      "required": true
    },
    "timeAvailable": {
      "type": "string",
      "required": true
    },
    "mapUrl": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "required": true,
      "targetField": "name"
    },
    "reviewAverage": {
      "type": "decimal",
      "required": true,
      "default": 0
    },
    "reviewsCount": {
      "type": "integer",
      "default": 0,
      "required": true
    },
    "cost": {
      "type": "string"
    },
    "route": {
      "type": "enumeration",
      "enum": [
        "Violet",
        "Indigo",
        "Blue",
        "Green",
        "Yellow",
        "Orrange",
        "Red"
      ]
    },
    "seoMeta": {
      "type": "component",
      "repeatable": false,
      "component": "common.seo"
    },
    "booking": {
      "type": "component",
      "repeatable": false,
      "component": "collection-type-components.booking"
    }
  }
}
